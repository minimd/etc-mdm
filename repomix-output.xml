    public int getDrawableResourceForIntent(AppInfo appInfo) {
        if (appInfo.intent != null && appInfo.intent.equals("android.intent.action.DIAL")) {
            return R.drawable.dialer;
        } else {
            return R.drawable.settings;
        }
    }

